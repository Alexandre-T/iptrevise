{% extends 'default/base.html.twig' %}

{% block title %}{{ 'default.ip.create.title'|trans }} Â· {{ parent() }}{% endblock title %}

{% block page_header %}{% endblock %}

{% block content_content %}

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">
                {{ 'default.ip.create.title %machine% %network%'|trans({
                    '%network%': network.label,
                    '%machine%': machine.label,
                }) }}
            </h1>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            <div  class="form-group">
                <label for="app_machine_network" class="control-label col-sm-3 required">
                    {{ 'form.ip.field.network' | trans }}
                </label>
                <div class="col-sm-9">
                    <p class="form-control-static"><strong>{{ network.label }}</strong></p>
                </div>
            </div>
            <div  class="form-group">
                <label for="app_machine_machine" class="control-label col-sm-3 required">
                    {{ 'form.ip.field.machine' | trans }}
                </label>
                <div class="col-sm-9">
                    <p class="form-control-static"><strong>{{ machine.label }}</strong></p>
                </div>
            </div>
            {{ form_widget(form) }}
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input class="btn btn-primary" type="submit" value="{{ 'administration.actions.create' | trans }}" />
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock content_content %}

{% block content_action %}
    <h3>{{ 'administration.actions' | trans }}</h3>
    <div class="text-center" id="default-actions">
        <div class="btn-group-vertical">
            <a class="btn-mini btn btn-default" href="{{ path('default_network_index') }}">
                <span class="fa fa-sitemap"></span>&nbsp;{{ 'default.actions.network.list' | trans }}
            </a>
            <a class="btn-mini btn btn-default" href="{{ path('default_network_show', {'id': network.id}) }}">
                <span class="fa fa-sitemap"></span>&nbsp;{{ 'default.actions.network.show' | trans }}
            </a>
            <a class="btn-mini btn btn-default" href="{{ path('default_machine_index') }}">
                <span class="fa fa-desktop"></span>&nbsp;{{ 'default.actions.machine.list' | trans }}
            </a>
            <a class="btn-mini btn btn-default" href="{{ path('default_network_index') }}">
                <span class="fa fa-desktop"></span>&nbsp;{{ 'default.actions.machine.show' | trans }}
            </a>
        </div>
    </div>
{% endblock content_action %}
