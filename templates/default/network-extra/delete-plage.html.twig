{% extends '@App/base.html.twig' %}

{% set administration_entity_show = 'default_network_show' %}

{% block title %}{{ 'default.network.delete-plage.title %plage%'|trans({'%plage%': plage.label})}} Â· {{ parent() }}{% endblock title %}

{% block page_header %}{% endblock %}

{% block content_row %}
    {{ form_start(confirm_form) }}
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="toolbar-proof panel panel-primary">
                <div class="panel-heading">
                    <h1 class="panel-title">{{ 'default.action.confirm' | trans }}</h1>
                </div>
                <div class="panel-body">
                    <p>{{ 'default.network.delete-plage.title %plage%'|trans({'%plage%': plage.label})}}</p>
                </div>
                <div class="panel-footer">
                    <div class="text-right">
                        <a href="{{ path('default_network_show', {'id': plage.network.id}) }}" title="{{ 'form.plage.delete-plage.unconfirm' | trans }}" class="btn btn-default">
                            <span class="fa fa-fw fa-hand-stop-o"></span>
                            {{ 'form.plage.delete-plage.unconfirm' | trans }}
                        </a>
                        {{ form_widget(confirm_form.confirm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(confirm_form) }}
{% endblock content_row %}
