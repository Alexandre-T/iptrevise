{% extends 'default/base.html.twig' %}

{% import "macro.html.twig" as app_macro %}

{% block title %}{{ 'default.ip.create.title'|trans }} Â· {{ parent() }}{% endblock title %}

{% block page_header %}{% endblock %}

{% block content_content %}

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">{{ 'default.ip.create.title %name%'|trans({'%name%': network.label}) }}</h1>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.ip) }}
            {{ form_row(form.reason) }}
            {{ form_row(form.machine.label) }}
            {{ form_row(form.machine.description) }}
            {{ form_row(form.machine.interface) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input class="btn btn-primary" type="submit" value="{{ 'administration.actions.create' | trans }}" />
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">{{ 'default.network.show.title %name%'|trans({'%name%': network.label })}}</h1>
        </div>
        <div class="panel-body">
            <dl class="">
                {{ app_macro.dl_network(network, true, next_ip) }}
            </dl>
        </div>
    </div>

{% endblock content_content %}

{% block content_action %}
    <h3>{{ 'administration.actions' | trans }}</h3>
    <div class="text-center" id="default-actions">
        <div class="btn-group-vertical">
            <a class="btn-mini btn btn-default" href="{{ path('default_network_index') }}">
                <span class="fa fa-sitemap"></span>&nbsp;{{ 'network.actions.back.list' | trans }}
            </a>
            <a class="btn-mini btn btn-default" href="{{ path('default_network_show', {'id': network.id}) }}">
                <span class="fa fa-sitemap"></span>&nbsp;{{ 'default.actions.network.show' | trans }}
            </a>
        </div>
    </div>
{% endblock content_action %}
