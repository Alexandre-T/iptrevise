{% extends 'default/base.html.twig' %}

{% set administration_entity_show = 'default_machine_show' %}

{% set machines_macs = 'nl2br(machine.macs)' %}

{% block title %}{{ 'default.machine.edit.title %name%'|trans({'%name%': machine.label})}} Â· {{ parent() }}{% endblock title %}

{% block headline %}{{ 'default.machine.edit.title %name%'|trans({'%name%': machine.label})}}{% endblock %}

{% block content_settings %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">{{ 'default.machine.edit.title %name%'|trans({'%name%': machine.label})}}</h1>
        </div>
        <div class="panel-body">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button class="btn btn-primary" type="submit">
                        <span class="fa fa-save"></span>
                        {{ 'administration.actions.edit' | trans }}
                    </button>
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock content_settings%}

{% block content_action %}
    <h3>{{ 'administration.actions' | trans }}</h3>
    <div class="text-center" id="administration-actions">
        <div class="btn-group-vertical">
            <a class="btn-mini btn btn-default" href="{{ path('default_machine_index') }}" data-placement="left"
               data-toggle="tooltip" title="{{ 'default.machine.action.list.title' | trans }}">
                <span class="fa fa-desktop"></span>&nbsp;{{ 'default.machine.action.list' | trans }}
            </a>
            <a class="btn-mini btn btn-default" href="{{ path('default_machine_show', { 'id': machine.id }) }}"
               data-toggle="tooltip" title="{{ 'default.machine.action.show.title' | trans }}" data-placement="left">
                <span class="fa fa-eye"></span>&nbsp;{{ 'administration.actions.show' | trans }}
            </a>
            {% if isDeletable %}
                <button class="btn btn-danger btn-mini confirm-delete" data-toggle="modal" data-target="#confirm-delete"
                        data-form="form" data-placement="left" title="{{ 'default.machine.action.delete.title' | trans }}">
                    <span class="fa fa-trash-o"></span>&nbsp;{{ 'administration.actions.delete' | trans }}
                </button>
            {% else %}
                <span class="btn btn-danger disabled">
                    <span class="fa fa-trash-o"></span>&nbsp;{{ 'administration.actions.delete' | trans }}
                </span>
            {% endif %}
        </div>
    </div>
{% endblock content_action %}
